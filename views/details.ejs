<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= character ? 'Editar: '+character.name : 'Nuevo Personaje' %></title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"/>
  <link href="/css/style.css" rel="stylesheet"/>
</head>
<body>
  <div class="container my-5">
    <div class="card bg-transparent border-light mx-auto" style="max-width: 600px;">
      <div class="card-body">
        <h2 class="header-title mb-4 text-center">
          <%= character ? 'Editar '+character.name : 'Crear Personaje' %>
        </h2>
        <form
          action="<%= character ? '/characters/'+character.id : '/characters' %>"
          method="POST"
          enctype="multipart/form-data">

          <!-- Preview -->
          <div class="mb-3 text-center">
            <img
              id="preview"
              src="<%= character?.image_url || '/images/placeholder.png' %>"
              class="img-fluid rounded mb-2"
              style="max-height:250px;"
            />
          </div>

          <!-- File picker -->
          <div class="mb-3">
            <label for="image" class="form-label text-light">Imagen</label>
            <input
              class="form-control form-control-sm"
              type="file"
              id="image"
              name="image"
              accept="image/*"
              onchange="preview(this)"/>
          </div>

          <!-- Nombre -->
          <div class="mb-3">
            <label for="name" class="form-label text-light">Nombre</label>
            <input
              type="text"
              id="name"
              name="name"
              class="form-control form-control-sm bg-dark text-light"
              value="<%= character?.name || '' %>"
              required/>
          </div>

          <!-- Descripción -->
          <div class="mb-4">
            <label for="description" class="form-label text-light">Descripción</label>
            <textarea
              id="description"
              name="description"
              rows="3"
              class="form-control form-control-sm bg-dark text-light"
              required><%= character?.description || '' %></textarea>
          </div>

          <!-- Botones -->
          <div class="d-flex justify-content-between">
            <a href="/" class="btn btn-outline-light btn-sm">
              <i class="bi bi-arrow-left-circle"></i> Volver
            </a>
            <button type="submit" class="btn btn-main btn-sm">
              <i class="bi bi-save2"></i>
              <%= character ? 'Guardar' : 'Crear' %>
            </button>
          </div>

        </form>
      </div>
    </div>
  </div>

  <script>
    function preview(input) {
      if (input.files && input.files[0]) {
        const reader = new FileReader();
        reader.onload = e => document.getElementById('preview').src = e.target.result;
        reader.readAsDataURL(input.files[0]);
      }
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
