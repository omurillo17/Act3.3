<!DOCTYPE html><html lang="es">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>Looney Tunes</title>

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Custom styles -->
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
<div class="container py-5">

  <!-- Encabezado -->
  <h1 class="display-4 text-warning text-center mb-4">Looney&nbsp;Tunes</h1>

  <!-- Botón crear -->
  <div class="d-flex justify-content-center mb-4">
    <a href="/characters/new" class="btn btn-main btn-lg">
      <i class="bi bi-plus-circle me-2"></i> Crear Personaje
    </a>
  </div>

  <!-- Galería de personajes -->
  <% if (characters.length === 0) { %>
    <div class="alert alert-warning text-center">
      <i class="bi bi-exclamation-triangle-fill"></i> ¡Sin personajes aún!
    </div>
  <% } else { %>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
      <% characters.forEach(c => { %>
        <div class="col">
          <div class="card h-100">
            <% if (c.image_url) { %>
              <img src="<%= c.image_url %>" class="card-img-top" style="height:220px;object-fit:cover;">
            <% } %>
            <div class="card-body">
              <h5 class="text-warning"><%= c.name %></h5>
              <p class="text-secondary small"><%= c.created_at %></p>
              <p><%= c.description %></p>
            </div>
            <div class="card-footer d-flex justify-content-between">
              <a href="/characters/<%= c.id %>" class="btn btn-sm btn-outline-light">
                <i class="bi bi-pencil"></i>
              </a>
              <form action="/characters/<%= c.id %>/delete" method="POST">
                <button class="btn btn-sm btn-outline-danger">
                  <i class="bi bi-trash"></i>
                </button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

  <!-- Sección de links de streaming -->
  <section class="mt-5">
    <h2 class="text-warning text-center mb-4">
      <i class="bi bi-film me-2"></i>¿Clips de 3 personajes?
    </h2>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 g-3">
      <div class="col">
        <a href="https://www.youtube.com/watch?v=Ga_RwPmx-N0" target="_blank"
           class="stream-card d-block text-center text-decoration-none h-100 p-4">
          <h5 class="text-light">Porky</h5>
        </a>
      </div>
      <div class="col">
        <a href="https://www.youtube.com/watch?v=DDZBzvTDhGU" target="_blank"
           class="stream-card d-block text-center text-decoration-none h-100 p-4">
          <h5 class="text-light">Speedy Gonzales</h5>
        </a>
      </div>
      <div class="col">
        <a href="https://www.youtube.com/watch?v=T3KP0uSq3VA" target="_blank"
           class="stream-card d-block text-center text-decoration-none h-100 p-4">
          <h5 class="text-light">Coyote</h5>
        </a>
      </div>