<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Personajes de Looney Tunes</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"/>
  <link
    href="/css/style.css"
    rel="stylesheet"/>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    rel="stylesheet"/>
</head>
<body>
  <div class="container">

    <!-- Cabecera -->
    <div class="text-center mb-5">
      <h1 class="display-4 header-title">Looney Tunes</h1>
      <p class="text-light">Personajes clásicos de Warner Bros</p>
    </div>

    <!-- Botón flotante -->
    <div class="d-flex justify-content-center mb-4">
      <a href="/characters/new" class="btn btn-main btn-lg">
        <i class="bi bi-plus-circle me-2"></i> Crear Personaje
      </a>
    </div>

    <!-- Galería -->
    <% if (characters.length === 0) { %>
      <div class="alert alert-warning text-center">
        <i class="bi bi-exclamation-triangle-fill"></i>
        ¡No hay personajes aún! Agrega uno.
      </div>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
        <% characters.forEach(c => { %>
          <div class="col">
            <div class="card h-100">
              <% if (c.image_url) { %>
                <img src="<%= c.image_url %>" class="card-img-top" style="height:200px;object-fit:cover;" alt="<%= c.name %>">
              <% } else { %>
                <div class="d-flex align-items-center justify-content-center bg-secondary" style="height:200px;">
                  <i class="bi bi-image fs-1 text-dark"></i>
                </div>
              <% } %>
              <div class="card-body">
                <h5 class="card-title text-warning fw-bold"><%= c.name %></h5>
                <p class="card-text"><%= c.description || 'Sin descripción' %></p>
              </div>
              <div class="card-footer d-flex justify-content-between">
                <a href="/characters/<%= c.id %>" class="btn btn-sm btn-outline-light">
                  <i class="bi bi-pencil-square"></i>
                </a>
                <form action="/characters/<%= c.id %>/delete" method="POST">
                  <button class="btn btn-sm btn-outline-danger">
                    <i class="bi bi-trash-fill"></i>
                  </button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
