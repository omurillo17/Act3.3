<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Personajes de Looney Tunes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.4.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <style>
    .character-card {
      transition: transform 0.3s;
    }
    .character-card:hover {
      transform: scale(1.03);
    }
    .looney-colors {
      background: linear-gradient(90deg, #FFD700, #FF4500, #4169E1);
      height: 8px;
      border-radius: 4px 4px 0 0;
    }
    .character-img {
      height: 200px;
      width: 100%;
      object-fit: cover;
      border-radius: 4px;
    }
    .character-description {
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
    }
  </style>
</head>
<body>
  <div class="container py-4">
    <!-- Header con tema Looney Tunes -->
    <div class="text-center mb-5">
      <div class="looney-colors mb-3"></div>
      <h1 class="display-4 fw-bold text-danger">Looney Tunes</h1>
      <p class="lead text-muted">Personajes clásicos de Warner Bros</p>
    </div>

    <!-- Formulario para agregar nuevo personaje -->
    <div class="row justify-content-center mb-5">
      <div class="col-md-8">
        <form action="/characters" method="POST" class="input-group shadow" enctype="multipart/form-data">
          <input
            type="text"
            name="name"
            class="form-control form-control-lg"
            placeholder="Nuevo personaje..."
            required
            aria-label="Nuevo personaje">
          <button class="btn btn-warning btn-lg" type="submit">
            <i class="bi bi-plus-lg me-2"></i>Agregar
          </button>
        </form>
      </div>
    </div>

    <!-- Lista de personajes -->
    <% if (characters.length === 0) { %>
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="alert alert-warning text-center py-3">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            ¡No hay personajes aún! Agrega a Bugs Bunny, el Pato Lucas, etc.
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% characters.forEach(character => { %>
          <div class="col">
            <div class="card character-card shadow-sm h-100">
              <div class="looney-colors"></div>
              <div class="card-body">
                <div class="text-center mb-3">
                  <img src="<%= character.image_url || 'https://via.placeholder.com/200x200?text=' + character.name %>" 
                       alt="<%= character.name %>" 
                       class="character-img img-fluid mb-3">
                </div>
                <h5 class="card-title text-center fw-bold"><%= character.name %></h5>
                <p class="card-text character-description"><%= character.description %></p>
              </div>
              <div class="card-footer bg-white border-top-0">
                <div class="d-flex justify-content-between">
                  <a href="/characters/<%= character.id %>" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-pencil me-1"></i>Editar
                  </a>
                  <form action="/characters/<%= character.id %>/delete" method="POST">
                    <button class="btn btn-sm btn-outline-danger" type="submit">
                      <i class="bi bi-trash me-1"></i>Eliminar
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.4.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>